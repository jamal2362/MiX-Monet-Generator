<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/system_neutral2_800</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/system_accent1_100</item>
        <item name="colorPrimaryVariant">@android:color/system_neutral1_100</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_900</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/system_accent3_100</item>
        <item name="colorSecondaryVariant">@android:color/system_neutral1_100</item>
        <item name="colorSecondaryContainer">@android:color/system_accent2_700</item>
        <item name="colorOnSecondary">@android:color/system_neutral1_900</item>
    </style>
</resources>
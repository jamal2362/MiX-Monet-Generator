<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/system_neutral1_50</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/system_accent1_700</item>
        <item name="colorPrimaryVariant">@android:color/system_neutral1_200</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_900</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/system_accent3_200</item>
        <item name="colorSecondaryVariant">@android:color/system_neutral1_200</item>
        <item name="colorSecondaryContainer">@android:color/system_accent2_200</item>
        <item name="colorOnSecondary">@android:color/system_neutral1_900</item>
    </style>

    <style name="Widget.App.CardView" parent="@style/Widget.Material3.CardView.Outlined">
        <item name="strokeWidth">2dp</item>
        <item name="cardCornerRadius">32dp</item>
        <item name="strokeColor">@color/system_accent_color</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/bottom_navigation_background</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemIconTint">@color/system_accent_color</item>
    </style>

    <style name="Widget.App.ButtonStyle" parent="@style/Widget.Material3.Button.OutlinedButton.Icon">
        <item name="strokeColor">@color/system_accent_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="iconSize">24dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:layout_height">72dp</item>
    </style>
</resources>
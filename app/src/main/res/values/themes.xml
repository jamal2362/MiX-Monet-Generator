<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@android:color/system_neutral1_10</item>
        <item name="android:statusBarColor">@android:color/system_neutral1_10</item>
        <item name="android:navigationBarColor">@android:color/system_neutral2_100</item>
        <item name="colorControlHighlight">@color/system_accent_color</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/system_accent1_700</item>
        <item name="colorPrimaryVariant">@android:color/system_neutral1_200</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_900</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/system_accent3_200</item>
        <item name="colorSecondaryVariant">@android:color/system_neutral1_200</item>
        <item name="colorSecondaryContainer">@android:color/system_accent2_200</item>
        <item name="colorOnSecondary">@android:color/system_neutral1_900</item>
    </style>

    <style name="Widget.App.CardView.Outlined" parent="@style/Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/bottom_navigation_background</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/system_accent_color</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/bottom_navigation_background</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemIconTint">@color/system_accent_color</item>
        <item name="itemTextColor">@color/system_accent_color</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.Icon" parent="@style/Widget.Material3.Button.OutlinedButton.Icon">
        <item name="strokeColor">@color/system_accent_color</item>
        <item name="backgroundTint">@color/bottom_navigation_background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="iconSize">24dp</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/bottom_navigation_background</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>
</resources>
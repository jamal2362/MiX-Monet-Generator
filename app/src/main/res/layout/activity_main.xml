<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:backgroundTint="@color/app_logo_background"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="96dp"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_applogo" />

        <Button
            android:id="@+id/buttonLight"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp"
            android:text="@string/light_button_text"
            android:textAllCaps="true"
            android:textColor="@color/text_default"
            android:textSize="16sp"
            app:icon="@drawable/ic_light_mode"
            app:iconSize="24dp"
            app:iconTint="@color/text_default"
            app:strokeColor="@color/app_logo_background"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/buttonDark"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="@string/dark_button_text"
            android:textAllCaps="true"
            android:textColor="@color/text_default"
            android:textSize="16sp"
            app:icon="@drawable/ic_dark_mode"
            app:iconSize="24dp"
            app:iconTint="@color/text_default"
            app:strokeColor="@color/app_logo_background"
            app:strokeWidth="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="156dp"
        android:backgroundTint="@android:color/transparent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonTelegram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:contentDescription="@null"
            app:backgroundTint="@color/app_logo_background"
            app:srcCompat="@drawable/ic_telegram"
            app:tint="@color/text_default" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonGitHub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:contentDescription="@null"
            app:backgroundTint="@color/app_logo_background"
            app:srcCompat="@drawable/ic_github"
            app:tint="@color/text_default" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>